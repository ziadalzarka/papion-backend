{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "app/*": [
        "./src/*"
      ],
      "@gray/mongoose-database": [
        "libs/mongoose-database/src"
      ],
      "@gray/mongoose-database/*": [
        "libs/mongoose-database/src/*"
      ],
      "@gray/app-config": [
        "libs/app-config/src"
      ],
      "@gray/app-config/*": [
        "libs/app-config/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}